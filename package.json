{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@workspace/root",
	"homepage": "https://github.com/adchitects/configs",
	"repository": "adchitects/configs.git",
	"bugs": "https://github.com/adchitects/configs/issues",
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	},
	"packageManager": "pnpm@7.14.2",
	"scripts": {
		"build": "turbo run build -v",
		"clean": "pnpm clean:cache ; turbo run clean -v",
		"clean:cache": "del \"./node_modules/.cache\"",
		"contributors:add": "all-contributors add",
		"contributors:generate": "all-contributors generate",
		"deps:check": "pnpm lint:deps ; turbo run lint:deps -v",
		"deps:upgrade": "pnpm deps:upgrade:root ; pnpm deps:upgrade:packages ; pnpm:deps:upgrade:shared",
		"deps:upgrade:packages": "pnpm upgrade --interactive --latest --filter \"@adchitects/*\"",
		"deps:upgrade:root": "pnpm upgrade --interactive --latest",
		"deps:upgrade:shared": "pnpm upgrade --interactive --latest --filter \"@workspace/shared\"",
		"dev": "turbo run dev -v",
		"format": "concurrently \"pnpm:format:*\" --group --timings ; turbo run format -v",
		"format:prettier": "prettier --check \"./!(packages|shared)**/*.*\" --write",
		"format:syncpack": "syncpack format",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings ; pnpm turbo run lint -v",
		"lint:deps": "concurrently \"depcheck\" --group --timings",
		"lint:format": "prettier --check \"./!(packages|shared)/**/*.*\"",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .cjs,.json,.yml,.yaml --ignore \"./packages\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"./.gitignore\" --ignore \"./{.changeset,shared,packages}/**/*\"",
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@adchitects/eslint-config": "workspace:*",
		"@adchitects/markdownlint-config": "workspace:*",
		"@adchitects/prettier-config": "workspace:*",
		"@adchitects/syncpack-config": "workspace:*",
		"@changesets/changelog-github": "0.4.7",
		"@changesets/cli": "2.25.2",
		"all-contributors-cli": "6.24.0",
		"browserslist": "4.21.4",
		"concurrently": "7.5.0",
		"del-cli": "5.0.0",
		"depcheck": "1.4.3",
		"eslint": "8.25.0",
		"husky": "8.0.1",
		"lint-staged": "13.0.3",
		"markdownlint-cli": "0.32.2",
		"syncpack": "8.2.4",
		"turbo": "1.6.3",
		"typescript": "4.8.4"
	}
}
