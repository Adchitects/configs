{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@adchitects/typescript-config",
	"compilerOptions": {
		"composite": true,
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./source",
		"tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
		"types": ["node", "prettier"]
	},
	"exclude": ["dist/", "node_modules/"],
	"include": ["source/"]
}
